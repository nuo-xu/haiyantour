<!DOCTYPE html>
<html>
	<head>
	  <title>Haiyantour</title>
	  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
	  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
	  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css">
	  <%= stylesheet_link_tag "home.css" %>
	  <%= csrf_meta_tags %>
	</head>

	<body>
		<div id="cssmenu">
			<ul>
				<li><%= link_to "CONTACT US", contact_url %></li>
				<li class="has-sub"><%= link_to "DISCOVERY", discovery_url %>
					<ul>
						<li><%= link_to "FOOD", discovery_url %></li>
						<li><%= link_to "HOTEL", discovery_url %></li>
						<li><%= link_to "COUNTIES", discovery_url %></li>
						<li><%= link_to "TRANSIT", discovery_url %></li>
						<li class="last"><%= link_to "BUSINESS", discovery_url %></li>
					</ul>
				</li>
				<li><%= link_to "MEDIA", media_url %></li>
				<li><%= link_to "NEWS", news_url %></li>
				<li><%= link_to "STORY", story_url %></li>
				<li><%= link_to "HOME", root_url %></li>	
			</ul>
		</div>
		<%= yield %>
		<!-- Footer -->
		<div id="footer">
			<div class="inner">
				<div class="container">
					<div class="column social">
						<a href="localhost:3000/contact/">
							<h3>Contact Us</h3>
						</a>
						<p>
							<a>+86-573-86039910</a>
						</p>
						<h3>Follow Us</h3>
						<p>
							<span class="social-media-icons-round-footer">
								<a href="http://www.weibo.com/haiyantourism" class="social-icon-round-footer weibo"></a>
								<a href="http://www.wechat.com" class="social-icon-round-footer wechat"></a>
								<a href="http://www.facebook.com" class="social-icon-round-footer facebook"></a>
							</span>
						</p>
					</div>
					<div class="column sitemap">
						<h3>Site Map</h3>
						<p>
							<%= link_to  "News", news_url %>
						</p>
						<p>
							<%= link_to "Media", media_url %>
						</p>
						<p>
							<%= link_to "Discovery", discovery_url %>
						</p>
					</div>
					<div class="column find">
						<h3>Find Us</h3>
							<p>
								<a class="location" href="http://map.baidu.com/?newmap=1&s=inf%26uid%3D7f243a72c8dcd326d3f49e57%26c%3D2491%26all%3D1%26wd%3D%E6%B5%99%E6%B1%9F%E6%B5%B7%E7%9B%90%E8%A1%97%E9%81%93%E6%96%B0%E6%A1%A5%E5%8C%97%E8%B7%AF180%E5%8F%B7&fr=alam1&ext=1&from=alamap" target="_blank">Haiyan Office</a>
							</p>
					</div>
					<div class="column subscriber">
						<h3>HYTOUR Newsletter</h3>
						<p>Interested in Haiyan Tour updates?</p>
						<%= form_for(Subscriber.new) do |f| %>
							<% if flash[:notice] %>
	  						<p class="notice"><%= flash[:notice] %></p>
							<% end %>
							<div>
								<%= f.text_field :email_address, class: "subscribeInputField", placeholder: "Email Address" %>
							</div>
							<div>
								<%= f.submit "Subscribe", class: "subscribeButton"%>
							</div>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>