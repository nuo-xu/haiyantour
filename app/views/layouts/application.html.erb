<!DOCTYPE html>
<html>
	<head>
	  <title>Haiyantour</title>
	  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
	  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
	  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css">
	  <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>
	  <%= csrf_meta_tags %>
	</head>
	<body>
		<div class="container">
			<div class="page-header">
				<ul class="nav nav-pills pull-right">
					<li>
						<%= link_to "Story", story_url %>
					</li>
					<li>
						<%= link_to "News", news_url %>
					</li>
					<li>
						<%= link_to "Media", media_url %>
					</li>
					<li class="dropdown">
						<a class="dropdown-toggle" href="#" data-toggle="dropdown">
							Discovery <span class="caret"></span>
						</a>
						<ul class="dropdown-menu" role="menu">
							<li><%= link_to "Food", discovery_url %></li>
							<li class="divider"></li>
							<li><%= link_to "Hotel", discovery_url %></li>
							<li class="divider"></li>
							<li><%= link_to "Counties", discovery_url %></li>
							<li class="divider"></li>
							<li><%= link_to "Transit", discovery_url %></li>
							<li class="divider"></li>
							<li><%= link_to "Business", discovery_url %></li>
						</ul>
					</li>
					<li>
						<%= link_to "Contact Us", contact_url %>
					</li>
				</ul>
				<h1>
					<%= link_to "HAIYAN TOUR", root_url %>
				</h1>
			</div>
			<%= yield %>
		</div>
	</body>
</html>